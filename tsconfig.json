{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "skipLibCheck": true
  },
  "include": ["types.ts", "index.js", "codemods/**/*.js"],
  "exclude": [
    "test/fixtures/**/*",
    "scripts/*.js"
  ]
}
